trigger:
- main

pool:
  vmImage: ubuntu-latest
stages:
- stage: Build
  jobs:
  - job: FirstJob
    steps:
      - bash: echo Build FirstJob
      - bash: echo $(PipelineLevelVariable)
- stage: DevDeploy
  variables:
    environment: Dev
  dependsOn: Build
  jobs:
  - job: SecondJob
    steps:
      - bash: echo $(environment)DeployJob

- stage: QADeploy
  variables:
    environment: QA
  dependsOn: Build
  jobs:
  - job: ThirdJob
    steps:
      - bash: echo $(environment)DeployJob
- stage: ProdDeploy
  variables:
    environment: Prod
  dependsOn:
  - DevDeploy
  - QADeploy
  jobs:
  - job: FourthJob
    steps:
      - bash: echo $(environment)DeployJob
      


