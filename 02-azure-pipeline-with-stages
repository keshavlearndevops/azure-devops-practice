trigger:
- main

pool:
  vmImage: ubuntu-latest
stages:
- stage: Build
  jobs:
  - job: FirstJob
    steps:
      - bash: echo Build FirstJob
- stage: DevDeploy
  dependsOn: Build
  jobs:
  - job: SecondJob
    steps:
      - bash: echo DevDeploy SecondJob

- stage: QADeploy
  dependsOn: Build
  jobs:
  - job: ThirdJob
    steps:
      - bash: echo QADeploy ThirdJob
- stage: ProdDeploy
  dependsOn:
  - DevDeploy
  - QADeploy
  jobs:
  - job: FourthJob
    steps:
      - bash: echo PordDeploy FourthJob
      


